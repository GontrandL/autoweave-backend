{
  "name": "@autoweave/backend",
  "version": "1.0.0",
  "description": "AutoWeave Backend - Scalable backend services architecture",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "node tests/integration/core-connection.test.js",
    "lint": "eslint src --ext .js",
    "lint:fix": "eslint src --ext .js --fix",
    "monitoring:start": "./scripts/start-monitoring.sh",
    "monitoring:stop": "./scripts/stop-monitoring.sh",
    "monitoring:logs": "docker-compose -f docker-compose.monitoring.yml logs -f",
    "postman:generate": "node scripts/generate-postman-collection.js",
    "test:deployment": "./scripts/test-deployment.sh",
    "test:deployment:quick": "./scripts/test-deployment.sh --quick",
    "deploy": "./scripts/deploy-stack.sh",
    "deploy:full": "./scripts/deploy-stack.sh --full",
    "check:deps": "./scripts/check-dependencies.sh",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "dev:quick": "./scripts/dev-mode.sh quick",
    "dev:mock": "./scripts/dev-mode.sh --mock",
    "dev:redis": "./scripts/dev-mode.sh --redis",
    "startup": "./scripts/startup-manager.sh",
    "monitor": "./scripts/health-monitor.sh",
    "monitor:auto": "./scripts/health-monitor.sh --auto-restart"
  },
  "keywords": [
    "autoweave",
    "backend",
    "microservices",
    "event-driven",
    "scalable"
  ],
  "author": "AutoWeave Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "ws": "^8.16.0",
    "ioredis": "^5.3.2",
    "@qdrant/js-client-rest": "^1.7.0",
    "neo4j-driver": "^5.15.0",
    "prom-client": "^15.1.0",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.1",
    "eventemitter3": "^5.0.1",
    "chalk": "^5.3.0",
    "p-queue": "^7.4.1",
    "p-retry": "^5.1.2",
    "node-fetch": "^3.3.2",
    "jsonwebtoken": "^9.0.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "eslint": "^8.56.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "@types/jest": "^29.5.11",
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "babel-jest": "^29.7.0",
    "ioredis-mock": "^8.9.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
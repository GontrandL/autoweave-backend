# Application
APP_NAME=AutoWeave Backend
APP_VERSION=1.0.0
NODE_ENV=development
PORT=3001
NODE_ID=
CLUSTER_NAME=autoweave-cluster
LOG_LEVEL=info

# Security
JWT_SECRET=change-me-in-production
JWT_EXPIRES_IN=24h
API_KEY_HEADER=x-api-key
CORS_ORIGINS=*
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=autoweave:

# Qdrant
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=
QDRANT_HTTPS=false

# Neo4j/Memgraph
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password
NEO4J_DATABASE=neo4j
NEO4J_MAX_POOL_SIZE=100

# Monitoring
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30000
ENABLE_TRACING=false
TRACING_ENDPOINT=http://localhost:14268/api/traces
ENABLE_PROFILING=false
SLOW_QUERY_THRESHOLD=1000
MEMORY_ALERT_THRESHOLD=1073741824
CPU_ALERT_THRESHOLD=0.8

# Event Bus
EVENT_HISTORY_SIZE=1000
EVENT_DEFAULT_TTL=3600000
EVENT_PERSISTENCE=false
EVENT_COMPRESSION_THRESHOLD=1024

# Service Manager
SERVICE_DISCOVERY_INTERVAL=60000
HEALTH_CHECK_TIMEOUT=5000
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_RESET=60000

# Data Pipeline
PIPELINE_BATCH_SIZE=100
PIPELINE_TIMEOUT=30000
PIPELINE_MAX_RETRIES=3
PIPELINE_DLQ=true

# Auto Integration
AUTO_INTEGRATION_ENABLED=true
AUTO_INTEGRATION_SCAN_INTERVAL=300000
AUTO_INTEGRATION_MAX_SCANS=5
AUTO_INTEGRATION_VALIDATION=strict

# Analytics
ANALYTICS_RETENTION_DAYS=30
ANALYTICS_AGGREGATION_INTERVAL=60000
ANALYTICS_REALTIME=true
ANALYTICS_SAMPLING_RATE=1.0

# External Services (Optional)
OPENAI_API_KEY=
SLACK_WEBHOOK_URL=
SENTRY_DSN=
DATADOG_API_KEY=
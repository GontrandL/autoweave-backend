# Development Environment
NODE_ENV=development
PORT=3001
LOG_LEVEL=debug
DEBUG=autoweave:*

# Disable external services
DISABLE_REDIS=false
DISABLE_NEO4J=true
DISABLE_QDRANT=true
DISABLE_CORE=true

# Use mock adapters
USE_MOCK_ADAPTERS=true

# Development settings
SHOW_STACK_TRACES=true
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=1000

# JWT (development key - DO NOT USE IN PRODUCTION)
JWT_SECRET=dev-secret-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Redis (if enabled)
REDIS_HOST=localhost
REDIS_PORT=6379

# Neo4j (if enabled)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# Qdrant (if enabled)
QDRANT_HOST=localhost
QDRANT_PORT=6333

# AutoWeave Core (if enabled)
AUTOWEAVE_CORE_URL=http://localhost:3000
AUTOWEAVE_CORE_WS_URL=ws://localhost:3000/ws
ANP_SERVER_URL=http://localhost:8083

# Monitoring
METRICS_PORT=9090
PROMETHEUS_ENABLED=false
